<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:fontFamily="@font/poppins_medium"
                android:text="Order Placed"
                android:textColor="@color/txt_38"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_orderId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:fontFamily="@font/poppins_medium"
                android:gravity="end"
                android:text="Ref no. 263512074109"
                android:textColor="#8A383838"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_date"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:singleLine="true"
            android:text="Your item will be delivered by Fri, Jul 16th '22."
            android:textColor="@color/btn_color"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="18dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:singleLine="true"
            android:text="Delivered Successful"
            android:textColor="@color/btn_color"
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@mipmap/image"
                app:riv_corner_radius="12dp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/image"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:maxLines="2"
                android:text="HP WIRELESS NECK BAND CL 125"
                android:textColor="@color/txt_38"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_mrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/image"
                android:fontFamily="@font/poppins"
                android:gravity="start"
                android:text="MRP  ₹ 1499.00"
                android:textColor="#8A383838"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_mrp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/image"
                android:fontFamily="@font/poppins"
                android:gravity="start"
                android:text="DP Rate  ₹ 949.02 "
                android:textColor="#8A383838"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_bv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="30dp"
                android:layout_toEndOf="@+id/image"
                android:fontFamily="@font/poppins"
                android:gravity="start"
                android:text="BV  ₹ 949.00"
                android:textColor="@color/txt_38"
                android:textSize="15dp" />


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>