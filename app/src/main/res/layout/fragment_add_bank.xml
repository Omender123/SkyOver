<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".Fragment.SlideMenu.AddBankFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ed_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner8"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Account Holder Name"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_txt"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/ed_acc_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner8"
                android:drawableLeft="@drawable/ant_design_bank_twotone"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Account Holder Name"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_txt"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/ed_branch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner8"
                android:drawableLeft="@drawable/ant_design_bank_twotone"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Branch Name"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_txt"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/ed_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner8"
                android:drawableLeft="@drawable/ant_design_bank_twotone"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Bank Name"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_txt"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/ed_ifsc_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner8"
                android:drawableLeft="@drawable/ant_design_bank_twotone"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:hint="IFSC Code"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="@color/hint_txt"
                android:textSize="15dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/corner8"
        android:backgroundTint="@color/btn_color"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

</RelativeLayout>