<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    :background="@color/white"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:orientation="vertical"
    tools:context=".Fragment.SlideMenu.AccountSettingFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/lyt_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/txt_main_view"
                android:fontFamily="@font/poppins_medium"
                android:text="Password"
                android:textColor="@color/txt_38"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_chan_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="18dp"
                android:layout_toStartOf="@+id/txt_main_view"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Change Password"
                android:textColor="#8A383838"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/txt_main_view"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_view_all" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/lyt_kyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/txt_main_view1"
                android:fontFamily="@font/poppins_medium"
                android:text="KYC Verification"
                android:textColor="@color/txt_38"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="18dp"
                android:layout_toStartOf="@+id/txt_main_view1"
                android:fontFamily="@font/poppins"
                android:singleLine="true"
                android:text="Pending"
                android:textColor="@color/red"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/txt_main_view1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_view_all" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/lyt_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/txt_main_view2"
                android:fontFamily="@font/poppins_medium"
                android:text="Bank Details"
                android:textColor="@color/txt_38"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_bank_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="18dp"
                android:layout_toStartOf="@+id/txt_main_view2"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:textColor="#8A383838"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/txt_main_view2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_view_all" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        android:visibility="gone"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/lyt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/txt_main_view3"
                android:fontFamily="@font/poppins_medium"
                android:text="Permanent Address "
                android:textColor="@color/txt_38"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="18dp"
                android:layout_toStartOf="@+id/txt_main_view3"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:textColor="#8A383838"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/txt_main_view3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_view_all" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>