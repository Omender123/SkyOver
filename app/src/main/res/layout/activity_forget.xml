<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Authentication.ForgetActivity">


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Forget Password"
        android:textColor="@color/title_txt"
        android:textSize="20dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/poppins"
        android:text="Please enter your registered Mobile Number"
        android:textColor="@color/hint_txt"
        android:textSize="14dp" />





    <EditText
        android:id="@+id/ed_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:maxLength="10"
        android:background="@drawable/corner8"
        android:drawableLeft="@drawable/ic_mobile"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:hint="Mobile No."
        android:inputType="number"
        android:padding="11dp"
        android:textColor="#000000"
        android:textColorHint="@color/hint_txt"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/btn_for"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner8"
        android:backgroundTint="@color/btn_color"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Send"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />


</LinearLayout>